@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Home Page";
    Layout = ViewBag.Layout;
}

<div class="container">
    <h1>Employee List</h1>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Surname</th>
                <th>Birth Date</th>
                <th>Position</th>
                <th>Details</th>
                <th>Edit</th>
                <th>Update</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                @Html.DisplayFor(modelItem => employee, "EmployeeItemList")
            }
        </tbody>
    </table>
</div>